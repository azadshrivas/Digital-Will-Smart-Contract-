
pragma solidity ^0.8.0;

contract DigitalWill {
    address public owner;
    address public beneficiary;
    uint256 public releaseTime;
    bool public isClaimed;

    constructor(address _beneficiary, uint256 _releaseTime) payable {
        require(msg.value > 0, "Funds must be provided");
        require(_releaseTime > block.timestamp, "Release time must be in the future");

        owner = msg.sender;
        beneficiary = _beneficiary;
        releaseTime = _releaseTime;
        isClaimed = false;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "Only owner can perform this action");
        _;
    }

    function claim() external {
        require(msg.sender == beneficiary, "Only the beneficiary can claim");
        require(block.timestamp >= releaseTime, "Funds are still locked");
        require(!isClaimed, "Funds already claimed");

        isClaimed = true;
        payable(beneficiary).transfer(address(this).balance);
    }

    function updateBeneficiary(address _newBeneficiary) external onlyOwner {
        require(block.timestamp < releaseTime, "Cannot update after release time");
        beneficiary = _newBeneficiary;
    }

    function revokeWill() external onlyOwner {
        require(block.timestamp < releaseTime, "Cannot revoke after release time");
        require(!isClaimed, "Funds already claimed");

        isClaimed = true;
        payable(owner).transfer(address(this).balance);
    }

    function getWillDetails() external view returns (
        address _owner,
        address _beneficiary,
        uint256 _releaseTime,
        uint256 _balance,
        bool _isClaimed
    ) {
        return (
            owner,
            beneficiary,
            releaseTime,
            address(this).balance,
            isClaimed
        );
    }

    function extendReleaseTime(uint256 _newReleaseTime) external onlyOwner {
        require(_newReleaseTime > releaseTime, "New release time must be in the future");
        require(block.timestamp < releaseTime, "Cannot extend after release time");
        releaseTime = _newReleaseTime;
    }
}
